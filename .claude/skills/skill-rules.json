{
  "version": "1.0",
  "description": "Skill activation triggers for Claude Code. Controls when skills automatically suggest or block actions.",
  "skills": {
    "skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Meta-skill for creating and managing Claude Code skills",
      "promptTriggers": {
        "keywords": [
          "skill system",
          "create skill",
          "add skill",
          "skill triggers",
          "skill rules",
          "hook system",
          "skill development",
          "skill-rules.json",
          "claude skill",
          "skill configuration"
        ],
        "intentPatterns": [
          "(how do|how does|explain).*?skill",
          "(create|add|modify|build).*?skill",
          "skill.*?(work|trigger|activate|system)",
          "(setup|configure).*?skill"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          ".claude/skills/**/*.md",
          ".claude/skills/**/*.json",
          ".claude/hooks/**/*",
          ".claude/agents/**/*",
          ".claude/commands/**/*"
        ],
        "contentPatterns": [
          "skill-rules.json",
          "skill.*?trigger",
          "fileTriggers",
          "promptTriggers"
        ]
      }
    },
    "frontend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Next.js 15 development guidelines with React 19, TypeScript, Shadcn/ui, and Tailwind CSS best practices",
      "promptTriggers": {
        "keywords": [
          "component",
          "react component",
          "UI",
          "interface",
          "page",
          "modal",
          "dialog",
          "form",
          "shadcn",
          "tailwind",
          "styling",
          "frontend",
          "React",
          "Next.js",
          "server component",
          "client component",
          "app router",
          "server action",
          "route",
          "layout",
          "metadata"
        ],
        "intentPatterns": [
          "(create|add|make|build|update|modify|edit).*?(component|UI|page|modal|dialog|form|route)",
          "(how to|best practice).*?(component|react|next|shadcn|tailwind)",
          "(style|design|layout).*?(component|UI)",
          "(server|client).*?component",
          "app router.*?(page|route|layout)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/**/*.tsx",
          "app/**/*.ts",
          "components/**/*.tsx",
          "components/**/*.ts",
          "lib/**/*.ts",
          "hooks/**/*.ts"
        ],
        "pathExclusions": [
          "**/*.test.tsx",
          "**/*.test.ts",
          "**/*.spec.tsx",
          "**/*.spec.ts",
          "**/node_modules/**",
          "**/.next/**",
          "**/components/ui/**"
        ],
        "contentPatterns": [
          "from '@/components/ui/",
          "import.*from.*next",
          "'use client'",
          "export.*metadata",
          "export default.*function.*Page",
          "Server Component",
          "Client Component"
        ]
      }
    }
  },
  "notes": {
    "enforcement_types": {
      "suggest": "Skill suggestion appears but doesn't block execution",
      "block": "Requires skill to be used before proceeding (guardrail)",
      "warn": "Shows warning but allows proceeding"
    },
    "priority_levels": {
      "critical": "Highest - Always trigger when matched",
      "high": "Important - Trigger for most matches",
      "medium": "Moderate - Trigger for clear matches",
      "low": "Optional - Trigger only for explicit matches"
    },
    "customization": {
      "pathPatterns": "Adjust to match your project structure (app/, components/, lib/, hooks/)",
      "keywords": "Add domain-specific terms relevant to Next.js 15 and Shadcn/ui",
      "intentPatterns": "Use regex for flexible user intent matching"
    }
  }
}
